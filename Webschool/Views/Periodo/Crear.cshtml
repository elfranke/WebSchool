@model Webschool.Models.Periodos

@{
    ViewData["Title"] = "Crear";
}

<h2>Crear</h2>

<h4>Periodos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPeriodo" class="control-label"></label>
                <input value="@Model.IdPeriodo"  asp-for="IdPeriodo" class="form-control" />
                <span asp-validation-for="IdPeriodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <input value="@Model.Periodo"  asp-for="Periodo" class="form-control" />
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meses" class="control-label"></label>
                <input value="@Model.Meses"  asp-for="Meses" class="form-control" />
                <span asp-validation-for="Meses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input  type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
